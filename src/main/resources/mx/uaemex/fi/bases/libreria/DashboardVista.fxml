<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.uaemex.fi.bases.libreria.controlador.DashboardControlador"
            prefHeight="600.0" prefWidth="900.0">

    <left>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #2c3e50;">
            <padding><Insets top="20" right="10" bottom="20" left="10"/></padding>

            <Text fill="WHITE" text="Librería" textAlignment="CENTER">
                <font><Font name="System Bold" size="24.0"/></font>
            </Text>
            <Text fill="#bdc3c7" text="Sistema de Gestión" textAlignment="CENTER">
                <font><Font size="12.0"/></font>
            </Text>

            <Label minHeight="20"/>

            <Button fx:id="btnVentas" text="Nueva Venta" onAction="#irVentas"
                    prefWidth="180" prefHeight="40"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>

            <Button fx:id="btnLibros" text="Inventario Libros" onAction="#irLibros"
                    prefWidth="180" prefHeight="40"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>

            <Button fx:id="btnClientes" text="Clientes" onAction="#irClientes"
                    prefWidth="180" prefHeight="40"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>

            <Button fx:id="btnEmpleados" text="Empleados" onAction="#irEmpleados"
                    prefWidth="180" prefHeight="40"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>

            <Label maxHeight="Infinity" VBox.vgrow="ALWAYS"/>

            <Button fx:id="btnSalir" text="Cerrar Sesión" onAction="#cerrarSesion"
                    prefWidth="180" style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="panelContenido" style="-fx-background-color: #ecf0f1;">
            <VBox alignment="CENTER">
                <Text text="Bienvenido al Sistema" fill="#7f8c8d">
                    <font><Font size="32.0"/></font>
                </Text>
                <Label text="Seleccione una opción del menú lateral" textFill="#95a5a6"/>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <BorderPane style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
            <padding><Insets top="5" right="10" bottom="5" left="10"/></padding>
            <left>
                <Label fx:id="lblUsuario" text="Usuario: Desconocido" textFill="#2c3e50">
                    <font><Font name="System Bold" size="12.0"/></font>
                </Label>
            </left>
            <right>
                <Label fx:id="lblFecha" text="Fecha: Hoy" textFill="#7f8c8d"/>
            </right>
        </BorderPane>
    </bottom>

</BorderPane>

