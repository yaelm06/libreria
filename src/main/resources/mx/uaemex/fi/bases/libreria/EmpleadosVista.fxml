            </HBox>

            <!-- Tabla Completa (Con Scroll Horizontal AutomÃ¡tico activado por columnas anchas) -->
            <TableView fx:id="tblEmpleados" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="40" text="ID" />
                    <TableColumn fx:id="colNombre" prefWidth="100" text="Nombre" />
                    <TableColumn fx:id="colPaterno" prefWidth="100" text="A. Paterno" />
                    <TableColumn fx:id="colMaterno" prefWidth="100" text="A. Materno" />
                    <TableColumn fx:id="colCargo" prefWidth="90" text="Cargo" />
                    <TableColumn fx:id="colUsuario" prefWidth="80" text="Usuario" />
