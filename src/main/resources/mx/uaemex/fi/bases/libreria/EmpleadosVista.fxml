                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <ComboBox fx:id="cmbBuscarLocalidad" prefWidth="200" promptText="Localidad" />
                    <Button onAction="#cargarEmpleados" style="-fx-background-color: #ecf0f1; -fx-text-fill: #7f8c8d;" text="Limpiar Filtros" />
