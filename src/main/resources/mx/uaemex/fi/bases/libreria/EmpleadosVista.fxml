                    <TableColumn fx:id="colActivo" prefWidth="60" text="Activo" />
                </columns>
                <!-- UNCONSTRAINED permite que aparezca el scroll horizontal si las columnas no caben -->
                <columnResizePolicy>
                    <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <!-- ================= DERECHA: FORMULARIO ================= -->
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #2c3e50;" text="Detalles" />
                <Label fx:id="lblModo" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" text="(Nuevo)" />
            </HBox>

            <Separator />

            <VBox spacing="12">
                <!-- Datos Personales -->
                <Label style="-fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-font-size: 12px;" text="InformaciÃ³n Personal" />
                <GridPane hgap="10" vgap="10">
                    <TextField fx:id="txtNombre" promptText="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="txtPaterno" promptText="A. Paterno" GridPane.columnIndex="1" GridPane.rowIndex="0" HBox.hgrow="ALWAYS" />
