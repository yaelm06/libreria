<VBox style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.uaemex.fi.bases.libreria.controlador.EmpleadosControlador">

    <!-- BARRA SUPERIOR -->
